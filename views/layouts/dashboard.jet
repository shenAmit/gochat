<!DOCTYPE html>
<html lang="en" class="dark">
  <head>
    {{ include("./partials/header.jet") }}
  </head>
  <body class="bg-gray-50 dark:bg-gray-800">
    {{ include("./partials/navbar-dashboard.jet") }}

    <div class="flex pt-16 overflow-hidden bg-gray-50 dark:bg-gray-900">
      {{ include("./partials/sidebar.jet") }}

      <div
        id="main-content"
        class="relative w-full h-full overflow-y-auto bg-gray-50 lg:ml-64 dark:bg-gray-900"
      >
        <main>{{ block content }}{{ end }}</main>

        {{ if footer }}
          {{ include("./partials/footer.jet") }}
        {{ end }}
      </div>
    </div>

    {{ include("./partials/scripts.jet") }}
  </body>
</html>